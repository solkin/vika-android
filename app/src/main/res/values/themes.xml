<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Mandarin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/amber_600</item>
        <item name="colorPrimaryVariant">@color/amber_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/light_green_300</item>
        <item name="colorSecondaryVariant">@color/light_green_800</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

</resources>